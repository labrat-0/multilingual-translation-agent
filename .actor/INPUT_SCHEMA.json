{
    "title": "Multilingual Translation Agent",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "text": {
            "title": "Text to Translate",
            "type": "string",
            "description": "Enter the text you want to translate.",
            "editor": "textarea"
        },
        "target_language": {
            "title": "Target Language",
            "type": "string",
            "description": "e.g., FR, ES, DE, IT",
            "default": "FR"
        },
        "source_language": {
            "title": "Source Language",
            "type": "string",
            "description": "e.g., EN",
            "default": "EN"
        }
    },
    "required": ["text", "target_language"]
}
